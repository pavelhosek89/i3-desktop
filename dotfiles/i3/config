# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym uring resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym Control+Mod1+l exec "$(lock_system)"

# Controls for shutdown, reboot atc.
set $mode_power System reboot (r), shutdown (p), suspend (s), hibernate (h), lock/switch user (l), exit i3 (e)
mode "$mode_power" {
    # bindings for the suspend, hibernate, reboot, shutdown
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id echo "OK" | dmenu -i -p "Vypni bedničky a myš! Po vypnutí PC/NTB vytáhni PowerCube ze zásuvky!" -nf '$fg' -nb '$bg' -sb '$neutral' -sf '$bg' -fn 'DejaVu Sans Mono:pixelsize=14' && systemctl poweroff, mode "default"
    bindsym s exec --no-startup-id "$(lock_system)" && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id "$(lock_system)" && systemctl hibernate, mode "default"
    bindsym l exec --no-startup-id dm-tool lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Control+Mod1+Delete mode "$mode_power"

# Screenshot controls
set $mode_print Get screenshot fullscreen (f), windows (w), delay fullscreen (d), delay window (c)
mode "$mode_print" {
    # binding for get screenshot
    bindsym f exec scrot '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshot/', mode "default"
    bindsym w exec scrot -u '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshot/', mode "default"
    bindsym d exec scrot -d 5 '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshot/', mode "default"
    bindsym c exec scrot -d 5 -u '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/Screenshot/', mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Print mode "$mode_print"

# Display controls
set $mode_display Change display to laptop (l), dual-top (t), dual-right (r), DP (d), manual (m)
mode "$mode_display" {
    # binding for get screenshot
    bindsym l exec xrandr --output eDP-1 --mode 1920x1080 --output DP-1-1 --off, mode "default"
    bindsym t exec xrandr --output eDP-1 --mode 1920x1080 --auto --pos 0x1080 --output DP-1-1 --mode 1920x1080 --auto --pos 0x0, mode "default"
    bindsym r exec xrandr --output eDP-1 --mode 1920x1080 --left-of DP-1-1, mode "default"
    bindsym d exec xrandr --output eDP-1 --off --output DP-1-1 --mode 1920x1080, mode "default"
    bindsym m exec arandr, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_display"

